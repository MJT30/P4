<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet"  type="text/css" href="style.css"/>
    <title>Ani-Food</title>
</head>
<header><h1> <p class="ani_food">Ani-Food</p></h1></header>
<a href="/newrecipe" class="post">New Recipe</a>

<div class="content">
    {{#each data}}
    <h1 class="title">{{this.anime}}</h1>
    <h3 class="dish">{{this.dish}}</h3>
   <div>
    <img alt="..." class="image" src="{{this.anime_image}}" />  <img alt="..." class="image" src="{{this.rl_image}}" /> 
    <br/>
    <h4 class="recipe">{{this.recipe}}</h4>
    <a href="/home/{{this._id}}" class="btn btn-info">View</a>
   </div>
   
</div>

{{/each}}
</html>